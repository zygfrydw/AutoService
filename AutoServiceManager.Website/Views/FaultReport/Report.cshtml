@model AutoServiceManager.Common.Model.Fault
@{
    ViewBag.Title = "title";
}

<h2>Opisz nam swoją usterkę</h2>
@using(Html.BeginForm())
{
    @Html.HiddenFor(model => model.CarID)
    <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
        
    <div class="form-group">
        @Html.LabelFor(model => model.Decription, new { @class = "control-label"})
        <div>
            @Html.TextAreaFor(model => model.Decription, 20, 100, new {@class = "form-control", style = "max-width: 700px;"})
            @Html.ValidationMessageFor(model => model.Decription)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}