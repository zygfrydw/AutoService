@model AutoServiceManager.Common.Model.Fault
@{
    ViewBag.Title = "Edytuj zgłoszenie";
}

<h2>Edytuj zgłoszoną usterkę</h2>
@using(Html.BeginForm("Edit","FaultReport", Model.ID))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
        
    <div class="form-group">
        @Html.LabelFor(model => model.Decription, new { @class = "control-label"})
        <div>
            @Html.TextAreaFor(model => model.Decription, 20, 100, new {@class = "form-control", style = "max-width: 700px;"})
            @Html.ValidationMessageFor(model => model.Decription)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <input type="submit" value="Modyfikuj" class="btn btn-default" />
        </div>
    </div>
</div>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}